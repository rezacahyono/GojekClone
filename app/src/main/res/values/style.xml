<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GojekClone.Tabs" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tabs_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_layout_bg</item>
        <item name="tabSelectedTextColor">@color/green_dark</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="Theme.GojekClone.Text.Subtitle1" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.GojekClone.Text.Subtitle2" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.GojekClone.Text.Caption" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Theme.GojekClone.Text.Body1" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.GojekClone.Text.Body2" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_reguler</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Theme.GojekClone.Text.Headline6" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.GojekClone.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_bg</item>
        <item name="android:elevation">0dp</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>


    <style name="Theme.GojekClone.Text.Menu" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/sf_pro_display_reguler</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Theme.GojekClone.Icon" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="Theme.GojekClone.Divider" parent="">
        <item name="android:layout_height">2dp</item>
    </style>
</resources>
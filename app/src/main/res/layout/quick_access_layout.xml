<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_quick_access"
        style="@style/Theme.GojekClone.Text.Headline6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/quick_access"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fl_quick_access"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/frame_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quick_access">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium">

            <ImageView
                android:id="@+id/img_quick_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_goride"
                app:layout_constraintBottom_toTopOf="@id/img_quick_2"
                app:layout_constraintEnd_toStartOf="@id/tv_quick_access_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_quick_access_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:text="@string/message_quick_access"
                app:layout_constraintBottom_toBottomOf="@id/img_quick_1"
                app:layout_constraintEnd_toStartOf="@id/btn_quick_access_1"
                app:layout_constraintStart_toEndOf="@id/img_quick_1"
                app:layout_constraintTop_toTopOf="@id/img_quick_1" />

            <ImageButton
                android:id="@+id/btn_quick_access_1"
                style="@style/Theme.GojekClone.Icon"
                android:src="@drawable/ic_round_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_quick_access_1"
                app:layout_constraintTop_toTopOf="@id/img_quick_1"
                app:layout_constraintBottom_toBottomOf="@id/img_quick_1"
                android:contentDescription="@null"/>

            <ImageView
                android:id="@+id/img_quick_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/margin_large"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_goride"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_quick_access_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_quick_1" />

            <TextView
                android:id="@+id/tv_quick_access_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:text="@string/message_quick_access"
                app:layout_constraintBottom_toBottomOf="@id/img_quick_2"
                app:layout_constraintEnd_toStartOf="@id/btn_quick_access_2"
                app:layout_constraintStart_toEndOf="@id/img_quick_2"
                app:layout_constraintTop_toTopOf="@id/img_quick_2" />

            <ImageButton
                android:id="@+id/btn_quick_access_2"
                style="@style/Theme.GojekClone.Icon"
                android:src="@drawable/ic_round_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_quick_access_2"
                app:layout_constraintTop_toTopOf="@id/img_quick_2"
                app:layout_constraintBottom_toBottomOf="@id/img_quick_2"
                android:contentDescription="@null"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>